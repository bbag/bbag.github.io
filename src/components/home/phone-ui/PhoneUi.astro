<style lang="scss">
@import '@/styles/_Variables.scss';

.phone-wrapper,
.phone-svg {
    margin: 0 auto;
    position: relative;
    width: 100%;
}

.phone-wrapper {
    max-width: 14rem;

    &::before {
        background: rgba(0, 10, 20, 0.5);
        bottom: 0;
        content: '';
        display: block;
        filter: blur(0.5rem);
        height: 1rem;
        left: 50%;
        position: absolute;
        transform: translate(-50%, 40%) scaleX(3.5);
        width: 25%;
        z-index: 1;
    }

    @media (min-width: $breakpoint-sm) {
        & {
            max-width: 26.375rem;
        }
    }
}

.phone-svg {
    display: block;
    max-width: 26.375rem;
    position: relative;
    z-index: 1;
}

.side-buttons,
.frame,
.island {
    fill: #50606E;
}

.screen-bg {
    fill: #FAFAFA;
}

.screen-glow {
    filter: drop-shadow(0 0.0625rem 0.125rem rgba(255, 255, 255, 0.5));
    fill: rgba(255, 255, 255, 0.5);
}
</style>